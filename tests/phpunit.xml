<?xml version="1.0" encoding="UTF-8"?>

<phpunit
         backupGlobals="false"
         backupStaticAttributes="false"
         cacheTokens="false"
         colors="true"
         stopOnError="true"
         stopOnFailure="true"
         verbose="false"
         testdox="true"
         timeoutForSmallTests="1"
         timeoutForMediumTests="10"
         timeoutForLargeTests="60"
>
    <testsuites>
        <testsuite name="Memcached">
            <directory>.</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>../src</directory>
            <exclude>
                <directory>../vendor</directory>
                <directory>../src/Memcached/Exception.php</directory>
            </exclude>
        </whitelist>
    </filter>
</phpunit>
